@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Year)
    @Html.TextBoxFor(model => model.Year)

    @Html.Label("Select Breed")
    @Html.DropDownList("BreedId")
    <input type="submit" value="Add new Animal" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Animals", "Index")</p>